{
    "name": "gas-demodulify-plugin",
    "sourceRoot": "src",
    "projectType": "library",
    "targets": {
        "clean": {
            "command": "rm -rf dist coverage docs/nx-build-graph.html",
            "cache": false
        },
        "lint": {
            "command": "eslint 'src/**/*.ts'",
            "outputs": [],
            "cache": true
        },
        "format": {
            "command": "prettier --write . --log-level warn",
            "outputs": [],
            "cache": true
        },
        "format:check": {
            "command": "./scripts/run-with-diagnostics.sh --cmd 'prettier --check .' --header 'PRETTIER CHECK FAILED' --detail 'Run locally: npx nx run gas-demodulify-plugin:format'",
            "outputs": [],
            "cache": true
        },
        "toc:check": {
            "command": "./scripts/run-with-diagnostics.sh --cmd 'update-markdown-toc --check --recursive .' --header 'TOC CHECK FAILED' --detail 'Run locally: npx nx run gas-demodulify-plugin:toc:update'",
            "outputs": [],
            "cache": true
        },
        "toc:update": {
            "command": "update-markdown-toc --recursive .",
            "outputs": [],
            "cache": false
        },
        "typecheck": {
            "command": "./scripts/run-with-diagnostics.sh --cmd 'tsc -p tsconfig.typecheck.json' --header 'TYPECHECK FAILED' --detail 'Run locally: npx nx run gas-demodulify-plugin:typecheck'",
            "outputs": [],
            "cache": true
        },
        "compile": {
            "command": "tsc -p tsconfig.build.json",
            "outputs": ["{projectRoot}/dist"],
            "cache": true
        },
        "test": {
            "executor": "@nx/jest:jest",
            "dependsOn": ["compile"],
            "outputs": ["{projectRoot}/coverage"],
            "options": {
                "jestConfig": "{projectRoot}/jest.config.cjs",
                "passWithNoTests": true,
                "silent": true,
                "verbose": false
            }
        },
        "build": {
            "dependsOn": ["lint", "format:check", "toc:check", "test"]
        },
        "package": {
            "dependsOn": ["build"],
            "command": "npm pack",
            "outputs": ["{projectRoot}/*.tgz"],
            "cache": true
        },
        "release": {
            "dependsOn": ["package"],
            "description": "Full release pipeline"
        }
    }
}
