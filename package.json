{
    "name": "@datalackey/gas-demodulify",
    "version": "0.1.0",
    "description": "Webpack plugin that emits GAS-safe JavaScript with hierarchical namespaces",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "scripts": {
        "lint": "eslint 'src/**/*.ts'",
        "typecheck": "tsc --noEmit",
        "check": "npm run lint && npm run typecheck",
        "compile": "tsc",
        "compile:watch": "tsc --watch",
        "format": "prettier --write . --log-level warn",
        "format:check": "prettier --check .",
        "test": "jest",
        "test:watch": "jest --watch",
        "docs:toc:update": "update-markdown-toc --recursive .",
        "docs:toc:check": "update-markdown-toc --check --recursive .",
        "build": "rm -rf dist && npm run lint && npm run format && npm run docs:toc:update && npm run compile && npm run test",
        "package:release": "nx run gas-demodulify:release"
    },
    "peerDependencies": {
        "webpack": "^5.0.0"
    },
    "devDependencies": {
        "@datalackey/update-markdown-toc": "^1.0.4",
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "nx": "^22.5.0",
        "outdent": "^0.8.0",
        "prettier": "^3.8.1",
        "strip-comments": "^2.0.1",
        "ts-dedent": "^2.2.0",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.0.0",
        "typescript": "^5.9.3",
        "webpack": "^5.0.0",
        "webpack-cli": "^5.0.0"
    },
    "dependencies": {
        "zod": "^4.3.5"
    }
}
